@page
@model Homework4Umbraco.Pages.Participants.CreateModel

@{
    ViewData["Title"] = "Create";
}


<h1>Enter Raffle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Participant.FirstName" class="control-label"></label>
                <input asp-for="Participant.FirstName" class="form-control" />
                <span asp-validation-for="Participant.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.LastName" class="control-label"></label>
                <input asp-for="Participant.LastName" class="form-control" />
                <span asp-validation-for="Participant.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.Email" class="control-label"></label>
                <input asp-for="Participant.Email" class="form-control" />
                <span asp-validation-for="Participant.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.SerialNumberID" class="control-label"></label>
                <input asp-for="Participant.SerialNumberID" class="form-control" />
                <span asp-validation-for="Participant.SerialNumberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enter!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">List Of Entries</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
